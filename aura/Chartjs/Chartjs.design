<design:component>
    <design:attribute name="apexDataProvider" label="Apex Data Provider" description="Name of the Apex Class which provides JSON data to draw chart. As for JSON data format refer to http://www.chartjs.org" />
	<design:attribute name="chartTitle" label="Chart Title" description="Title of the chart." />
    <design:attribute name="showLegend" label="Show Legend" description="If set to false, legend does not show up. Defaut is true."/>
    <design:attribute name="legendUnit" label="Unit for Legend" description="Unit for the legend."/>
    <design:attribute name="chartType" label="Chart Type" description="Type of the chart. Available values are Line, Bar, Pie, Doughnut, Radar and PolarArea. If this is not set, default chart type is automatically applied based on the data provided by Apex Data Provider." />
	<design:attribute name="showChartTypeSwitch" label="Show Chart Type Switch" description="If set to false, chart type switch does not show up. Default is true." />
</design:component>