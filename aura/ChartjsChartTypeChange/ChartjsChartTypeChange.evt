<aura:event type="APPLICATION" description="This event is used to notify chart type in certain component is changed." >
    <aura:attribute name="chartType" type="string" required="true" description="Type of the chart. Available values are Line, Bar, Radar, Pie, Doughnut, PolarArea." />
    <aura:attribute name="componentId" type="string" required="true" description="Global Id of the component where chart type will be changed." />
</aura:event>